{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "error.schema.json",
  "title": "Planner Error",
  "type": "object",
  "required": ["error", "code"],
  "properties": {
    "error": { "type": "string" },
    "code": {
      "type": "string",
      "enum": ["BAD_REQUEST", "VALIDATION_FAILED", "UNSUPPORTED_INTENT", "INTERNAL"]
    },
    "details": { "type": "object", "additionalProperties": true }
  },
  "additionalProperties": false
}
