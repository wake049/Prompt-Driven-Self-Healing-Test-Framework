# Environment configuration for MCP Server
# Copy to .env and customize as needed

# Server Configuration
MCP_HOST=0.0.0.0
MCP_PORT=8001
MCP_LOG_LEVEL=INFO
MCP_DEBUG=false
MCP_AUTO_RELOAD=false

# Authentication
MCP_AUTH_REQUIRED=false
MCP_AUTH_TOKEN=your-secret-token-here
MCP_TOKEN_EXPIRY_HOURS=24

# Timeouts (milliseconds)
MCP_TOOL_CALL_TIMEOUT=30000
MCP_CONNECTION_TIMEOUT=5000
MCP_REQUEST_TIMEOUT=10000

# Performance
MCP_MAX_CONCURRENT_TOOLS=100
MCP_RATE_LIMIT_PER_MINUTE=1000

# Database (optional)
MCP_DATABASE_URL=postgresql://user:pass@localhost:5432/mcp
MCP_REDIS_URL=redis://localhost:6379

# Service Discovery
MCP_ELEMENT_REPOSITORY_URL=http://localhost:8002
MCP_POLICY_ENGINE_URL=http://localhost:8003
MCP_EXECUTION_SERVICE_URL=http://localhost:8004

# Feature Flags
MCP_ENABLE_ANALYTICS=true
MCP_ENABLE_METRICS=true
MCP_ENABLE_TRACING=false

# Environment
ENVIRONMENT=development