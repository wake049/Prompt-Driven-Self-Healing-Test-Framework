{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Add Element Version Tool Schema",
  "description": "Schema for adding new version to existing element",
  "type": "object",
  "properties": {
    "element_name": {
      "type": "string",
      "description": "Name of existing element",
      "pattern": "^[a-zA-Z][a-zA-Z0-9_]*$",
      "minLength": 1,
      "maxLength": 100
    },
    "css_selector": {
      "type": "string", 
      "description": "CSS selector for the new version",
      "minLength": 1,
      "maxLength": 500
    },
    "xpath_selector": {
      "type": ["string", "null"],
      "description": "Optional XPath selector for the new version",
      "maxLength": 1000
    },
    "alternatives": {
      "type": "array",
      "description": "Alternative selectors for the new version",
      "items": {
        "type": "string",
        "maxLength": 500
      },
      "maxItems": 10
    },
    "created_by": {
      "type": "string",
      "description": "Creator of the version",
      "default": "system",
      "maxLength": 100
    },
    "ai_reasoning": {
      "type": ["string", "null"],
      "description": "AI reasoning for the selector changes",
      "maxLength": 2000
    },
    "confidence_score": {
      "type": "number",
      "description": "Confidence score for the new selector",
      "minimum": 0.0,
      "maximum": 1.0,
      "default": 0.0
    }
  },
  "required": ["element_name", "css_selector"],
  "additionalProperties": false
}