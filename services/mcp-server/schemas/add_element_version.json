{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Add Element Version Tool Schema",
  "description": "Schema for adding new version to existing element",
  "type": "object",
  "properties": {
    "request": {
      "type": "object",
      "properties": {
        "element_name": {
          "type": "string",
          "description": "Name of existing element",
          "pattern": "^[a-zA-Z][a-zA-Z0-9_]*$",
          "minLength": 1,
          "maxLength": 100
        },
        "selector": {
          "type": "string", 
          "description": "New selector for the element version",
          "minLength": 1,
          "maxLength": 500
        },
        "confidence": {
          "type": "number",
          "description": "Confidence score for the new selector",
          "minimum": 0.0,
          "maximum": 1.0,
          "default": 0.9
        },
        "alternatives": {
          "type": "array",
          "description": "Alternative selectors for the new version",
          "items": {
            "type": "string",
            "maxLength": 500
          },
          "maxItems": 10
        }
      },
      "required": ["element_name", "selector"],
      "additionalProperties": false
    },
    "response": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string",
          "enum": ["success", "error"]
        },
        "version": {"type": "integer"},
        "message": {"type": "string"}
      },
      "required": ["status"]
    }
  },
  "required": ["request", "response"]
}