{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Approve Element Version Tool Schema", 
  "description": "Schema for approving pending element version",
  "type": "object",
  "properties": {
    "element_name": {
      "type": "string",
      "description": "Name of the element",
      "pattern": "^[a-zA-Z][a-zA-Z0-9_]*$",
      "minLength": 1,
      "maxLength": 100
    },
    "version": {
      "type": "integer",
      "description": "Version number to approve",
      "minimum": 1,
      "maximum": 1000
    },
    "approver": {
      "type": "string",
      "description": "Name of the approver",
      "default": "system",
      "maxLength": 100
    }
  },
  "required": ["element_name", "version"],
  "additionalProperties": false
}